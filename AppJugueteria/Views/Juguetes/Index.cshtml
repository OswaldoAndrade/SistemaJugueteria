
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h2>ADMINISTRACION DE JUGUETERIA</h2>
            </div>
            <div class="card-body">
                <a class="btn btn-success" style="margin-bottom:10px" id="btnNuevo"><i class="fa fa-plus"></i>Agregar Nuevo</a>
                <table id="dtJuguetes" class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Edad</th>
                            <th>Compañía</th>
                            <th>Precio</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--MODAL PARA AGREGAR O ACTUALIZAR JUGUETE-->
<div class="modal fade" tabindex="-1" role="dialog" id="dvAgregar">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">AGREGAR JUGUETE</h4>
            </div>

            <div class="modal-body">
                <input type="hidden" id="txtId" value="0" />
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Nombre</label>
                            <input id="txtNombre" class="form-control" type="text" aria-label="Nombre del juguete" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Precio</label>
                            <input id="txtPrecio" class="form-control" type="text" aria-label="Nombre del juguete" onkeypress="return filterFloat(event,this);" maxlength="6" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Compania</label>
                            <input id="txtCompania" class="form-control" type="text" aria-label="Nombre del juguete" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Edad</label>
                            <input id="txtEdad" class="form-control" type="text" aria-label="Sugerencia de edad" onkeypress="return soloNumeros(event);" maxlength="2" />
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label>Descripcion</label>
                            <textarea class="form-control" rows="3" id="txtDescripcion"></textarea>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Regresar</button>
                    <button id="btnAgregar" type="button" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/Juguetes.js"></script>
    <script type="text/javascript" src="~/Scripts/sweetalert2.all.min.js"></script>
}

